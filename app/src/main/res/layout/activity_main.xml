<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/pale_black">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playAgainButton"
        android:background="@drawable/play_again_green"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/audiowide"
        android:text="Play Again"
        android:textColor="@color/pale_black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/EndTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/pale_yellow"
        android:fontFamily="@font/play_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgainButton"/>

    <TextView
        android:id="@+id/EndWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/pale_yellow"
        android:fontFamily="@font/play_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EndTextView" />

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo2" />

    <GridLayout
        android:id="@+id/keyboardGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:columnCount="11"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First Row -->
        <TextView
            android:id="@+id/tvQ"
            style="@style/KeyboardTextView"
            android:text="Q" />

        <TextView
            android:id="@+id/tvW"
            style="@style/KeyboardTextView"
            android:text="W" />

        <TextView
            android:id="@+id/tvE"
            style="@style/KeyboardTextView"
            android:text="E" />

        <TextView
            android:id="@+id/tvR"
            style="@style/KeyboardTextView"
            android:text="R" />

        <TextView
            android:id="@+id/tvT"
            style="@style/KeyboardTextView"
            android:text="T" />

        <TextView
            android:id="@+id/tvY"
            style="@style/KeyboardTextView"
            android:text="Y" />

        <TextView
            android:id="@+id/tvU"
            style="@style/KeyboardTextView"
            android:text="U" />

        <TextView
            android:id="@+id/tvI"
            style="@style/KeyboardTextView"
            android:text="I" />

        <TextView
            android:id="@+id/tvO"
            style="@style/KeyboardTextView"
            android:text="O" />

        <TextView
            android:id="@+id/tvP"
            style="@style/KeyboardTextView"
            android:text="P" />

        <TextView
            android:id="@+id/tvŠ"
            style="@style/KeyboardTextView"
            android:text="Š" />

        <!-- Second Row -->
        <TextView
            android:id="@+id/tvA"
            style="@style/KeyboardTextView"
            android:text="A" />

        <TextView
            android:id="@+id/tvS"
            style="@style/KeyboardTextView"
            android:text="S" />

        <TextView
            android:id="@+id/tvD"
            style="@style/KeyboardTextView"
            android:text="D" />

        <TextView
            android:id="@+id/tvF"
            style="@style/KeyboardTextView"
            android:text="F" />

        <TextView
            android:id="@+id/tvG"
            style="@style/KeyboardTextView"
            android:text="G" />

        <TextView
            android:id="@+id/tvH"
            style="@style/KeyboardTextView"
            android:text="H" />

        <TextView
            android:id="@+id/tvJ"
            style="@style/KeyboardTextView"
            android:text="J" />

        <TextView
            android:id="@+id/tvK"
            style="@style/KeyboardTextView"
            android:text="K" />

        <TextView
            android:id="@+id/tvL"
            style="@style/KeyboardTextView"
            android:text="L" />

        <TextView
            android:id="@+id/tvČ"
            style="@style/KeyboardTextView"
            android:text="Č" />

        <TextView
            android:id="@+id/tvĆ"
            style="@style/KeyboardTextView"
            android:text="Ć" />

        <!-- Third Row -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <TextView
            android:id="@+id/tvZ"
            style="@style/KeyboardTextView"
            android:text="Z" />

        <TextView
            android:id="@+id/tvX"
            style="@style/KeyboardTextView"
            android:text="X" />

        <TextView
            android:id="@+id/tvC"
            style="@style/KeyboardTextView"
            android:text="C" />

        <TextView
            android:id="@+id/tvV"
            style="@style/KeyboardTextView"
            android:text="V" />

        <TextView
            android:id="@+id/tvB"
            style="@style/KeyboardTextView"
            android:text="B" />

        <TextView
            android:id="@+id/tvN"
            style="@style/KeyboardTextView"
            android:text="N" />

        <TextView
            android:id="@+id/tvM"
            style="@style/KeyboardTextView"
            android:text="M" />

        <TextView
            android:id="@+id/tvĐ"
            style="@style/KeyboardTextView"
            android:text="Đ" />

        <TextView
            android:id="@+id/tvŽ"
            style="@style/KeyboardTextView"
            android:text="Ž" />
    </GridLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryLinearLayout">

        <LinearLayout
            android:id="@+id/lettersLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/letterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/orange"
                android:padding="8dp"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/drawHangmanImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:srcCompat="@drawable/stick_hangman_6_construction" />

    <LinearLayout
        android:id="@+id/categoryLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/category_bg"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/categoryImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/play_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/consecutiveWinsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/categoryLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/modeTextView"
        app:layout_constraintTop_toBottomOf="@+id/modeTextView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="Consecutive wins:"
            android:textColor="@color/beige"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play_bold"
            android:gravity="center"
            android:text="Record: 0"
            android:textColor="@color/beige"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/winsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play_bold"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Wins: 0"
            android:textColor="@color/beige"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/modeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/darker_orange"
        android:fontFamily="@font/audiowide"
        android:text="MODE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>